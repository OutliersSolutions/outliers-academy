<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Header Template Override -->
    <template id="header_template" inherit_id="website.layout" name="Outliers Academy Header">
        <xpath expr="//header" position="replace">
            <header class="oa-header">
                <nav class="oa-navbar">
                    <div class="oa-container">
                        <div class="oa-navbar-content">
                            <!-- Logo -->
                            <div class="oa-navbar-brand">
                                <a href="/" class="oa-logo">
                                    <span class="oa-logo-text">Outliers Academy</span>
                                </a>
                            </div>

                            <!-- Desktop Navigation -->
                            <div class="oa-navbar-nav d-none d-lg-flex">
                                <a href="/slides" class="oa-nav-link">Cursos</a>
                                <a href="/blog" class="oa-nav-link">Blog</a>
                                <a href="/forum" class="oa-nav-link">Foro</a>
                                <a href="/aboutus" class="oa-nav-link">Nosotros</a>
                                <a href="/contactus" class="oa-nav-link">Contacto</a>
                            </div>

                            <!-- Search Bar -->
                            <div class="oa-navbar-search d-none d-md-block">
                                <form class="oa-search-form" action="/slides" method="get">
                                    <input type="text" name="search" class="oa-search-input"
                                        placeholder="Buscar cursos..." />
                                    <button type="submit" class="oa-search-btn">
                                        <i class="fa fa-search" />
                                    </button>
                                </form>
                            </div>

                            <!-- User Actions -->
                            <div class="oa-navbar-actions">
                                <t t-if="not user_id or user_id == website.user_id">
                                    <!-- Not logged in -->
                                    <a href="/web/login" class="oa-btn oa-btn-outline oa-btn-sm">Iniciar
                                        Sesión</a>
                                    <a href="/web/signup" class="oa-btn oa-btn-primary oa-btn-sm">
                                        Registrarse</a>
                                </t>
                                <t t-else="">
                                    <!-- Logged in -->
                                    <div class="dropdown">
                                        <button class="oa-user-toggle dropdown-toggle" type="button"
                                            data-bs-toggle="dropdown">
                                            <span t-esc="user_id.name" />
                                            <i class="fa fa-chevron-down" />
                                        </button>
                                        <ul class="dropdown-menu oa-dropdown-menu">
                                            <li>
                                                <a href="/my" class="dropdown-item oa-dropdown-item">Mi
                                                    Perfil</a>
                                            </li>
                                            <li>
                                                <a href="/slides/my"
                                                    class="dropdown-item oa-dropdown-item">Mis
                                                    Cursos</a>
                                            </li>
                                            <li>
                                                <hr class="dropdown-divider oa-dropdown-divider" />
                                            </li>
                                            <li>
                                                <a href="/web/session/logout"
                                                    class="dropdown-item oa-dropdown-item">Cerrar
                                                    Sesión</a>
                                            </li>
                                        </ul>
                                    </div>
                                </t>

                                <!-- Mobile menu toggle -->
                                <button class="oa-menu-toggle d-lg-none" type="button"
                                    data-bs-toggle="collapse" data-bs-target="#oaMobileMenu"
                                    aria-controls="oaMobileMenu" aria-expanded="false"
                                    aria-label="Toggle navigation">
                                    <span class="oa-hamburger"></span>
                                    <span class="oa-hamburger"></span>
                                    <span class="oa-hamburger"></span>
                                </button>
                            </div>
                        </div>

                        <!-- Mobile Navigation -->
                        <div class="collapse oa-mobile-menu d-lg-none" id="oaMobileMenu">
                            <div class="oa-mobile-search">
                                <form class="oa-search-form" action="/slides" method="get">
                                    <input type="text" name="search" class="oa-search-input"
                                        placeholder="Buscar cursos..." />
                                    <button type="submit" class="oa-search-btn">
                                        <i class="fa fa-search" />
                                    </button>
                                </form>
                            </div>
                            <nav class="oa-mobile-nav">
                                <a href="/slides" class="oa-mobile-nav-link">Cursos</a>
                                <a href="/blog" class="oa-mobile-nav-link">Blog</a>
                                <a href="/forum" class="oa-mobile-nav-link">Foro</a>
                                <a href="/aboutus" class="oa-mobile-nav-link">Nosotros</a>
                                <a href="/contactus" class="oa-mobile-nav-link">Contacto</a>
                            </nav>
                        </div>
                    </div>
                </nav>
            </header>
        </xpath>
    </template>

    <!-- Footer Template Override -->
    <template id="footer_template" inherit_id="website.layout" name="Outliers Academy Footer">
        <xpath expr="//footer" position="replace">
            <footer class="oa-footer oa-bg-alt">
                <div class="oa-container">
                    <div class="oa-footer-content">
                        <div class="oa-grid oa-grid-4">
                            <!-- Company Info -->
                            <div class="oa-footer-section">
                                <div class="oa-footer-logo">
                                    <span class="oa-logo-text">Outliers Academy</span>
                                </div>
                                <p class="oa-footer-description">
                                    Transformamos vidas a través de la educación online de calidad.
                                    Únete a miles de estudiantes que ya han cambiado su futuro
                                    profesional.
                                </p>
                                <div class="oa-social-links">
                                    <a href="#" class="oa-social-link" aria-label="Facebook">
                                        <i class="fa fa-facebook" />
                                    </a>
                                    <a href="#" class="oa-social-link" aria-label="Twitter">
                                        <i class="fa fa-twitter" />
                                    </a>
                                    <a href="#" class="oa-social-link" aria-label="LinkedIn">
                                        <i class="fa fa-linkedin" />
                                    </a>
                                    <a href="#" class="oa-social-link" aria-label="Instagram">
                                        <i class="fa fa-instagram" />
                                    </a>
                                </div>
                            </div>

                            <!-- Quick Links -->
                            <div class="oa-footer-section">
                                <h4 class="oa-footer-title">Enlaces Rápidos</h4>
                                <ul class="oa-footer-links">
                                    <li>
                                        <a href="/slides">Todos los Cursos</a>
                                    </li>
                                    <li>
                                        <a href="/blog">Blog</a>
                                    </li>
                                    <li>
                                        <a href="/forum">Comunidad</a>
                                    </li>
                                    <li>
                                        <a href="/aboutus">Acerca de</a>
                                    </li>
                                </ul>
                            </div>

                            <!-- Support -->
                            <div class="oa-footer-section">
                                <h4 class="oa-footer-title">Soporte</h4>
                                <ul class="oa-footer-links">
                                    <li>
                                        <a href="/contactus">Contacto</a>
                                    </li>
                                    <li>
                                        <a href="/website/info">Términos de Uso</a>
                                    </li>
                                    <li>
                                        <a href="/website/info">Política de Privacidad</a>
                                    </li>
                                </ul>
                            </div>

                            <!-- Newsletter -->
                            <div class="oa-footer-section">
                                <h4 class="oa-footer-title">Newsletter</h4>
                                <p>Mantente al día con nuestros últimos cursos y ofertas especiales.</p>
                                <form class="oa-newsletter-form" action="/website/mailing/subscribe"
                                    method="post">
                                    <input type="hidden" name="csrf_token"
                                        t-att-value="request.csrf_token()" />
                                    <input type="email" name="email" class="oa-newsletter-input"
                                        placeholder="Tu email" required="" />
                                    <button type="submit" class="oa-btn oa-btn-primary oa-btn-sm">
                                        Suscribirse
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="oa-footer-bottom">
                        <div class="oa-footer-bottom-content">
                            <p class="oa-copyright"> © <span t-esc="datetime.datetime.now().year" />
                                Outliers Academy. Todos los derechos reservados. </p>
                            <div class="oa-footer-bottom-links">
                                <a href="/website/info">Términos</a>
                                <a href="/website/info">Privacidad</a>
                                <a href="/website/info">Cookies</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Scroll to top button -->
                <button class="oa-scroll-top" aria-label="Scroll to top">
                    <i class="fa fa-chevron-up" />
                </button>
            </footer>
        </xpath>
    </template>

</odoo>