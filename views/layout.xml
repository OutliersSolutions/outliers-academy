<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Main Layout Override -->
    <template id="layout_main" inherit_id="website.layout" name="Outliers Academy Main Layout">
        <xpath expr="//body" position="attributes">
            <attribute name="class">oa-theme</attribute>
        </xpath>

        <!-- Add custom CSS classes to main wrapper -->
        <xpath expr="//div[@id='wrapwrap']" position="attributes">
            <attribute name="class">oa-wrapwrap</attribute>
        </xpath>
    </template>

    <!-- Header Layout -->
    <template id="layout_header" inherit_id="website.layout" name="Outliers Academy Header">
        <xpath expr="//header" position="replace">
            <header class="oa-header">
                <nav class="oa-navbar">
                    <div class="oa-container">
                        <div class="oa-navbar-content">
                            <!-- Logo -->
                            <div class="oa-navbar-brand">
                                <a href="/" class="oa-logo">
                                    <img src="/theme_outliers_academy/static/src/img/logo.svg"
                                        alt="Outliers Academy" class="oa-logo-img" />
                                    <span class="oa-logo-text">Outliers Academy</span>
                                </a>
                            </div>

                            <!-- Desktop Navigation -->
                            <div class="oa-navbar-nav d-none d-lg-flex">
                                <a href="/courses" class="oa-nav-link">Cursos</a>
                                <a href="/programs" class="oa-nav-link">Programas</a>
                                <a href="/instructors" class="oa-nav-link">Instructores</a>
                                <a href="/blog" class="oa-nav-link">Blog</a>
                                <a href="/about" class="oa-nav-link">Nosotros</a>
                                <a href="/contact" class="oa-nav-link">Contacto</a>
                            </div>

                            <!-- Search Bar -->
                            <div class="oa-navbar-search d-none d-md-block">
                                <form class="oa-search-form" action="/search" method="get">
                                    <input type="text" name="search" class="oa-search-input"
                                        placeholder="Buscar cursos..." />
                                    <button type="submit" class="oa-search-btn">
                                        <i class="fa fa-search" />
                                    </button>
                                </form>
                            </div>

                            <!-- User Actions -->
                            <div class="oa-navbar-actions">
                                <t t-if="not user_id or user_id == website.user_id">
                                    <!-- Not logged in -->
                                    <a href="/web/login" class="oa-btn oa-btn-outline oa-btn-sm">Iniciar
                                        Sesión</a>
                                    <a href="/web/signup" class="oa-btn oa-btn-primary oa-btn-sm">
                                        Registrarse</a>
                                </t>
                                <t t-else="">
                                    <!-- Logged in -->
                                    <div class="oa-user-menu">
                                        <button class="oa-user-toggle" data-toggle="dropdown">
                                            <img t-att-src="user_id.avatar_128" class="oa-avatar"
                                                alt="User Avatar" />
                                            <span t-esc="user_id.name" />
                                            <i class="fa fa-chevron-down" />
                                        </button>
                                        <div class="oa-dropdown-menu">
                                            <a href="/my" class="oa-dropdown-item">Mi Perfil</a>
                                            <a href="/my/courses" class="oa-dropdown-item">Mis
                                                Cursos</a>
                                            <a href="/my/certificates" class="oa-dropdown-item">
                                                Certificados</a>
                                            <div class="oa-dropdown-divider" />
                                            <a href="/web/session/logout" class="oa-dropdown-item">Cerrar
                                                Sesión</a>
                                        </div>
                                    </div>
                                </t>

                                <!-- Mobile menu toggle -->
                                <button class="oa-menu-toggle d-lg-none"
                                    aria-label="Toggle navigation">
                                    <span class="oa-hamburger" />
                                    <span class="oa-hamburger" />
                                    <span class="oa-hamburger" />
                                </button>
                            </div>
                        </div>

                        <!-- Mobile Navigation -->
                        <div class="oa-mobile-menu d-lg-none">
                            <div class="oa-mobile-search">
                                <form class="oa-search-form" action="/search" method="get">
                                    <input type="text" name="search" class="oa-search-input"
                                        placeholder="Buscar cursos..." />
                                    <button type="submit" class="oa-search-btn">
                                        <i class="fa fa-search" />
                                    </button>
                                </form>
                            </div>
                            <nav class="oa-mobile-nav">
                                <a href="/courses" class="oa-mobile-nav-link">Cursos</a>
                                <a href="/programs" class="oa-mobile-nav-link">Programas</a>
                                <a href="/instructors" class="oa-mobile-nav-link">Instructores</a>
                                <a href="/blog" class="oa-mobile-nav-link">Blog</a>
                                <a href="/about" class="oa-mobile-nav-link">Nosotros</a>
                                <a href="/contact" class="oa-mobile-nav-link">Contacto</a>
                            </nav>
                        </div>
                    </div>
                </nav>
            </header>
        </xpath>
    </template>

    <!-- Footer Layout -->
    <template id="layout_footer" inherit_id="website.layout" name="Outliers Academy Footer">
        <xpath expr="//footer" position="replace">
            <footer class="oa-footer oa-bg-alt">
                <div class="oa-container">
                    <div class="oa-footer-content">
                        <div class="oa-grid oa-grid-4">
                            <!-- Company Info -->
                            <div class="oa-footer-section">
                                <div class="oa-footer-logo">
                                    <img src="/theme_outliers_academy/static/src/img/logo.svg"
                                        alt="Outliers Academy" class="oa-logo-img" />
                                    <span class="oa-logo-text">Outliers Academy</span>
                                </div>
                                <p class="oa-footer-description">
                                    Transformamos vidas a través de la educación online de calidad.
                                    Únete a miles de estudiantes que ya han cambiado su futuro
                                    profesional.
                                </p>
                                <div class="oa-social-links">
                                    <a href="#" class="oa-social-link" aria-label="Facebook">
                                        <i class="fa fa-facebook" />
                                    </a>
                                    <a href="#" class="oa-social-link" aria-label="Twitter">
                                        <i class="fa fa-twitter" />
                                    </a>
                                    <a href="#" class="oa-social-link" aria-label="LinkedIn">
                                        <i class="fa fa-linkedin" />
                                    </a>
                                    <a href="#" class="oa-social-link" aria-label="Instagram">
                                        <i class="fa fa-instagram" />
                                    </a>
                                </div>
                            </div>

                            <!-- Quick Links -->
                            <div class="oa-footer-section">
                                <h4 class="oa-footer-title">Enlaces Rápidos</h4>
                                <ul class="oa-footer-links">
                                    <li>
                                        <a href="/courses">Todos los Cursos</a>
                                    </li>
                                    <li>
                                        <a href="/programs">Programas</a>
                                    </li>
                                    <li>
                                        <a href="/instructors">Instructores</a>
                                    </li>
                                    <li>
                                        <a href="/pricing">Precios</a>
                                    </li>
                                    <li>
                                        <a href="/about">Acerca de</a>
                                    </li>
                                </ul>
                            </div>

                            <!-- Support -->
                            <div class="oa-footer-section">
                                <h4 class="oa-footer-title">Soporte</h4>
                                <ul class="oa-footer-links">
                                    <li>
                                        <a href="/help">Centro de Ayuda</a>
                                    </li>
                                    <li>
                                        <a href="/contact">Contacto</a>
                                    </li>
                                    <li>
                                        <a href="/faq">Preguntas Frecuentes</a>
                                    </li>
                                    <li>
                                        <a href="/terms">Términos de Uso</a>
                                    </li>
                                    <li>
                                        <a href="/privacy">Política de Privacidad</a>
                                    </li>
                                </ul>
                            </div>

                            <!-- Newsletter -->
                            <div class="oa-footer-section">
                                <h4 class="oa-footer-title">Newsletter</h4>
                                <p>Mantente al día con nuestros últimos cursos y ofertas especiales.</p>
                                <form class="oa-newsletter-form" action="/newsletter/subscribe"
                                    method="post">
                                    <input type="email" name="email" class="oa-newsletter-input"
                                        placeholder="Tu email" required="" />
                                    <button type="submit" class="oa-btn oa-btn-primary oa-btn-sm">
                                        Suscribirse
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="oa-footer-bottom">
                        <div class="oa-footer-bottom-content">
                            <p class="oa-copyright">
                                © 2025 Outliers Academy. Todos los derechos reservados.
                            </p>
                            <div class="oa-footer-bottom-links">
                                <a href="/terms">Términos</a>
                                <a href="/privacy">Privacidad</a>
                                <a href="/cookies">Cookies</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Scroll to top button -->
                <button class="oa-scroll-top" aria-label="Scroll to top">
                    <i class="fa fa-chevron-up" />
                </button>
            </footer>
        </xpath>
    </template>

</odoo>