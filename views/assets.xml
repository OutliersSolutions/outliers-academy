<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Custom snippet for homepage hero section -->
    <template id="snippet_hero_outliers" name="Outliers Hero Section">
        <section class="oa-hero-section oa-bg-main">
            <div class="oa-container">
                <div class="oa-hero-content">
                    <h1 class="oa-hero-title"> Transforma tu carrera con <span
                            class="oa-text-primary">educación de élite</span>
                    </h1>
                    <p class="oa-hero-subtitle">
                        Cursos online diseñados por expertos de la industria para profesionales
                        ambiciosos que buscan destacar en el mundo digital.
                    </p>
                    <div class="oa-hero-actions">
                        <a href="/courses" class="oa-btn oa-btn-primary oa-btn-lg">
                            Explorar Cursos
                        </a>
                        <a href="/about" class="oa-btn oa-btn-outline oa-btn-lg">
                            Conocer Más
                        </a>
                    </div>
                </div>
                <div class="oa-hero-image">
                    <img src="/theme-outliers-academy/static/src/img/hero-learning.svg"
                        alt="Online Learning" class="img-fluid" />
                </div>
            </div>
        </section>
    </template>

    <!-- Custom snippet for course grid -->
    <template id="snippet_course_grid" name="Course Grid">
        <section class="oa-section">
            <div class="oa-container">
                <div class="oa-section-header text-center">
                    <h2>Cursos Destacados</h2>
                    <p>Programas de formación diseñados para impulsar tu carrera profesional</p>
                </div>
                <div class="oa-grid oa-grid-3">
                    <div class="oa-course-card" t-foreach="courses" t-as="course">
                        <div class="oa-course-card-image">
                            <img t-att-src="course.image_url" t-att-alt="course.name"
                                class="img-fluid" />
                            <div class="oa-course-card-overlay">
                                <button class="oa-btn oa-btn-primary oa-btn-sm">Ver Curso</button>
                            </div>
                        </div>
                        <div class="oa-course-card-content">
                            <div class="oa-course-card-meta">
                                <span class="oa-badge oa-badge-primary" t-esc="course.category" />
                                <span class="oa-course-duration" t-esc="course.duration" />
                            </div>
                            <h3 class="oa-course-title" t-esc="course.name" />
                            <p class="oa-course-description" t-esc="course.description" />
                            <div class="oa-course-card-footer">
                                <div class="oa-course-price">
                                    <span class="oa-price-current" t-esc="course.price" />
                                </div>
                                <div class="oa-course-rating">
                                    <div class="oa-stars">
                                        <t t-foreach="range(5)" t-as="star">
                                            <i class="fa fa-star"
                                                t-att-class="'fa-star-o' if star >= course.rating else 'fa-star'" />
                                        </t>
                                    </div>
                                    <span class="oa-rating-count">(<t t-esc="course.review_count" />
                                        )</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <!-- Custom snippet for features section -->
    <template id="snippet_features" name="Features Section">
        <section class="oa-features-section oa-bg-alt">
            <div class="oa-container">
                <div class="oa-section-header text-center">
                    <h2>¿Por qué elegir Outliers Academy?</h2>
                    <p>La plataforma de aprendizaje más completa para profesionales</p>
                </div>
                <div class="oa-grid oa-grid-3">
                    <div class="oa-feature-card">
                        <div class="oa-feature-icon">
                            <i class="fa fa-graduation-cap" />
                        </div>
                        <h3>Instructores Expertos</h3>
                        <p>Aprende de profesionales con experiencia real en la industria y
                            certificaciones reconocidas.</p>
                    </div>
                    <div class="oa-feature-card">
                        <div class="oa-feature-icon">
                            <i class="fa fa-clock-o" />
                        </div>
                        <h3>Flexibilidad Total</h3>
                        <p>Estudia a tu ritmo, desde cualquier lugar y en cualquier momento que se
                            adapte a tu horario.</p>
                    </div>
                    <div class="oa-feature-card">
                        <div class="oa-feature-icon">
                            <i class="fa fa-certificate" />
                        </div>
                        <h3>Certificación</h3>
                        <p>Obtén certificados reconocidos por la industria al completar exitosamente
                            nuestros cursos.</p>
                    </div>
                </div>
            </div>
        </section>
    </template>

</odoo>