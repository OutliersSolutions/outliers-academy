# Odoo 17
ODOO_URL=https://your-odoo.example.com
ODOO_DB=odoo_db_name
ODOO_USERNAME=admin@example.com
ODOO_PASSWORD=your_password_or_api_key
ODOO_TIMEOUT=10000
ODOO_MODEL_DEFAULT=res.partner
ODOO_API_SCOPE=FRONTEND

# Stripe
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_123456
STRIPE_WEBHOOK_SECRET=whsec_your_secret
STRIPE_CURRENCY=usd

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_BASE=/api
NODE_ENV=development

# Security - Generate with: openssl rand -base64 64
SESSION_SECRET=your_secure_session_secret_here_minimum_32_chars

# Rate Limiting (in production, use Redis)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
ENABLE_HSTS=true
ENABLE_CSP=true
